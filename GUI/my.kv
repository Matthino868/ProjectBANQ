#: import NoTransition kivy.uix.screenmanager.NoTransition

#maak de schermen aan in de manager
<SchermManagement>
    transition: NoTransition()
    BeginScherm:
        name: 'BeginScherm'
    InlogScherm:
        name: 'InlogScherm'
    HoofdScherm:
        name: 'HoofdScherm'
    SaldoScherm:
        name: 'SaldoScherm'
    AndersScherm:
        name: 'AndersScherm'
    CheckScherm:
        name: 'CheckScherm'
    BlokkeerScherm:
        name: 'BlokkeerScherm'
    FoutpinScherm:
        name: 'FoutpinScherm'
    GeenBalansScherm
        name: 'GeenBalansScherm'
    FoutScherm
        name: 'FoutScherm'

<Button>
    background_normal: ''
    background_color: (36/255, 36/255, 36/255)
    size_hint: (0.5, 0.4)
    halign: "left"
    font_size: 32

#na elke <xxx> kan je een scherm designen
<BeginScherm>

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Foto's/BanqTemplate.png"

    FloatLayout
        size: root.width, root.height

        Label:
            text: 'Scan your card'
            id: LabelPas
            color: (36, 36, 36)
            pos_hint: {'x': 0, 'top': 1.2 }
            font_size: 50

        Label:
            text: "press * to proceed"
            id: LabelPas
            color: (0,0,0)
            font_size: 32

        Button:
            text:"OK"
            font_size: 32
            size_hint: (0.5, 0.2)
            on_press: 
                print('Gedrukt')
                if root.nummerCheck() == 1: \
                root.manager.current = 'InlogScherm'

<InlogScherm>:

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Foto's/BanqTemplate.png"

    FloatLayout
        size: root.width, root.height

        spacing: 5

        Label:
            text: root.inloglabel
            id: Label3
            font_size: 35
            color: (36, 36, 36)
            pos_hint: {'x': 0, 'top': 1 }

        Label:
            text: "Fill in your pin"
            color: (36, 36, 36)
            pos_hint: {'x': 0, 'top': 1.2 }
            font_size: 50

        Button:
            text:"OK"
            font_size: 32
            size_hint: (0.5, 0.2)
            pos_hint: {'x': 0, 'y': 0}
            on_press:
                root.inlogStatus = app.checkPin()
                if root.inlogStatus == 200: root.manager.current = 'HoofdScherm'; app.sendConf("1")
                if root.inlogStatus == 400: root.manager.current = 'FoutScherm'; app.sendConf('0')
                if root.inlogStatus == 404: root.manager.current = 'FoutScherm'; app.sendConf('0')
                if root.inlogStatus == 401: root.manager.current = 'FoutpinScherm'; app.sendConf('0')
                if root.inlogStatus == 403: root.manager.current = 'BlokkeerScherm'; app.sendConf('0')


                
<HoofdScherm>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Foto's/BanqTemplate.png"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        spacing: 3

        Label:
            text: "What amount do you want to withdraw?"
            font_size: 42
            color: (36, 36, 36)

        Button:
            text:"   70 euro"
            on_release: 
                root.setHoeveelheid(70)
                root.manager.current = 'CheckScherm'

        Button:
            text:"   Different"
            on_release: root.manager.current = 'AndersScherm'
        
        Button:
            text:"   See balance"
            on_release: 
                app.getSaldo()
                root.manager.current = 'SaldoScherm'

        Button:
            text:"   Cancel"
            on_release: 
                root.manager.current = 'BeginScherm'
            on_release: root.resetPinCode()

<SaldoScherm>
    on_pre_enter: saldo_label.text = 'â‚¬' + app.getSaldo()
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Foto's/BanqTemplate.png"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        spacing: 3

        Label:
            text: "This is your current balance:"
            font_size: 50
            color: (36, 36, 36)

        Label:
            id: saldo_label
            text: ' '
            pos_hint: {'x': 0, 'top': 1.3 }
            font_size: 50
            color: (36, 36, 36)

        Button:
            text:"Back"
            font_size: 32
            size_hint: (0.5, 0.5)
            on_release: root.manager.current = 'HoofdScherm'

<AndersScherm>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Foto's/BanqTemplate.png"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        spacing: 3

        Label:
            text: 'What amount do you want to withdraw?'
            font_size: 42
            color: (36, 36, 36)

        TextInput:
            id: input
            hint_text:'Enter amount'
            font_size: 32
            size_hint: (0.5, 0.5)
            
        
        Button:
            text: "OK"
            font_size: 32
            on_release: 
                root.setHoeveelheid(input.text)
                root.manager.current = 'CheckScherm'

        Button:
            text:"back"
            font_size: 32
            on_release: root.manager.current = 'HoofdScherm'

<CheckScherm>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Foto's/BanqTemplate.png"

    GridLayout:
        cols:1
        size: root.width, root.height

        Label:
            text: 'Are you sure?'
            font_size: 50
            color: (36, 36, 36)

        BoxLayout:
            Button:
                text: "Yes"
                font_size: 32
                on_release: 
                    root.WithdrawStatus = app.setSaldo() 
                    if root.WithdrawStatus == 200: root.manager.current = 'BeginScherm' 
                    if root.WithdrawStatus == 400: root.manager.current = 'FoutScherm' 
                    if root.WithdrawStatus == 404: root.manager.current = 'FoutScherm' 
                    if root.WithdrawStatus == 406: root.manager.current = 'GeenBalansScherm'; 
                    root.resetPinCode()
                
            Button:
                text: "No"
                font_size: 32
                on_release: root.manager.current = 'HoofdScherm'

<BlokkeerScherm>

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Foto's/BanqTemplate.png"

    FloatLayout
        size: root.width, root.height

        Label:
            text: 'Card is blocked'
            id: LabelPas
            color: (36, 36, 36)
            pos_hint: {'x': 0, 'top': 1.2 }
            font_size: 50

        Label:
            text: 'Contact your bank'
            color: (36, 36, 36)
            pos_hint: {'x': 0, 'top': 1}
            font_size: 50

        Button:
            text:"OK"
            font_size: 32
            size_hint: (0.5, 0.2)
            on_press: 
                root.manager.current = 'BeginScherm'

