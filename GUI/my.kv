#maak de schermen aan in de manager
<SchermManagement>
    InlogScherm:
        name: 'InlogScherm'
    HoofdScherm:
        name: 'HoofdScherm'
    SaldoScherm:
        name: 'SaldoScherm'
    AndersScherm:
        name: 'AndersScherm'
    CheckScherm:
        name: 'CheckScherm'

<Button>
    background_normal: ''
    background_color: (112/255, 112/255, 112/255)
    size_hint: (0.5, 0.5)
    font_size: 32

#na elke <xxx> kan je een scherm designen
<InlogScherm>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Foto's/BanqTemplate.png"

    FloatLayout
        size: root.width, root.height

        spacing: 5

        Label:
            text: "Inloggen"
            id: Label1
            font_size: 32
            pos_hint: {'x': 0, 'top': 1.42 }

        Label:
            text: ""
            id: Label3
            font_size: 32
            color: (0, 0, 0, 1)
            pos_hint: {'x': 0, 'top': 1.2 }
        
        TextInput:
            id: input1
            hint_text:'Enter number'
            font_size: 32
            size_hint: (0.5, 0.5)

        TextInput:
            id: input2
            hint_text:'Enter pin'
            font_size: 32
            size_hint: (0.5, 0.3)

        Button:
            text:"OK"
            font_size: 32
            size_hint: (0.5, 0.2)
            pos_hint: {'x': 0, 'y': 0}
            on_release: 
                root.setNummer(input1.text)
                if app.checkPin(input1.text, input2.text) == 1: \ 
                root.manager.current = 'HoofdScherm' 
                elif app.checkPin(input1.text, input2.text) == 0: \
                Label3.text = 'Foute pincode!'
                
<HoofdScherm>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Foto's/BanqTemplate.png"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        spacing: 5

        Label:
            text: "Hoeveel wilt u pinnen?"
            font_size: 32
        
        Button:
            text:"5 euro"
            on_release: 
                app.setSaldo(5)
                #app.get_running_app().stop()

        Button:
            text:"10 euro"
            on_release: 
                app.setSaldo(10)
                #app.get_running_app().stop()

        Button:
            text:"20 euro"
            on_release:
                app.setSaldo(20)                
                #app.get_running_app().stop()

        Button:
            text:"50 euro"
            on_release: 
                app.setSaldo(50)
                #app.get_running_app().stop()

        Button:
            text:"Anders"
            on_release: root.manager.current = 'AndersScherm'
        
        Button:
            text:"Saldo bekijken"
            on_release: 
                app.getSaldo()
                root.manager.current = 'SaldoScherm'

<SaldoScherm>
    on_pre_enter: saldo_label.text = app.getSaldo()
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Foto's/BanqTemplate.png"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        spacing: 3

        Label:
            text: "Dit is uw huidige saldo"
            font_size: 32
            color: (0, 0, 0, 1)

        Label:
            id: saldo_label
            text: ' '
            font_size: 32
            color: (0, 0, 0, 1)

        Button:
            text:"Terug"
            font_size: 32
            on_release: root.manager.current = 'HoofdScherm'

<AndersScherm>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Foto's/BanqTemplate.png"

    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        spacing: 3

        Label:
            text: 'Wat is uw gewenste hoeveelheid '
            font_size: 32
            color: (0, 0, 0, 1)

        TextInput:
            id: input
            hint_text:'Enter text'
            font_size: 32
            size_hint: (0.5, 0.5)
            
        
        Button:
            text: "OK"
            font_size: 32
            on_release: app.setSaldo(input.text)

        Button:
            text:"Terug"
            font_size: 32
            on_release: root.manager.current = 'HoofdScherm'

<CheckScherm>
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: "Foto's/BanqTemplate.png"

    GridLayout:
        cols:1
        size: root.width, root.height

        Label:
            text: 'Weet u het zeker?'
            font_size: 32

        BoxLayout:
            Button:
                text: "Ja"
                font_size: 32
                on_release: app.get_running_app().stop()
                
            Button:
                text: "Nee"
                font_size: 32
                on_release: root.manager.current = 'HoofdScherm'
